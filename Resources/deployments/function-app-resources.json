{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appInsightsInstrumentationKey":{
      "type": "string"
    },
    "azureMapsSubscriptionKey": {
      "type": "securestring"
    },
    "azureMapsApiVersion": {
      "type": "string"
    },
    "azureMapsUrl": {
      "type": "string"
    },
    "configEnvironmentName": {
      "type": "string"
    },
    "cosmosDbCollectionId": {
      "type": "string"
    },
    "cosmosDbDatabaseId": {
      "type": "string"
    },
    "cosmosDbEndpoint": {
      "type": "string"
    },
    "cosmosDbKey": {
      "type": "string"
    },
    "functionAppName": {
      "type": "string"
    },
    "serviceBusConnectionString": {
      "type": "string"
    },
    "serviceBusQueueName": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "storageAccountKey": {
      "type": "securestring"
    },
    "SearchServiceAdminApiKey": {
      "type": "string"
    },
    "SearchServiceName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2023-12-01",
      "name": "[format('{0}/{1}', parameters('functionAppName'), 'appsettings')]",
      "properties": {
        "EnvironmentName": "[toUpper(parameters('configEnvironmentName'))]",
        "FUNCTIONS_WORKER_RUNTIME": "dotnet-isolated",
        "FUNCTIONS_EXTENSION_VERSION": "~4",
        "MSDEPLOY_RENAME_LOCKED_FILES": "1",
        "AzureMapApiVersion": "[parameters('azureMapsApiVersion')]",
        "AzureMapSubscriptionKey":  "[parameters('azureMapsSubscriptionKey')]",
        "AzureMapURL": "[parameters('azureMapsUrl')]",
        "AzureWebJobsStorage": "[format('DefaultEndpointsProtocol=https;AccountName={0};AccountKey={1};EndpointSuffix=core.windows.net', parameters('storageAccountName'), parameters('storageAccountKey'))]",
        "APPINSIGHTS_INSTRUMENTATIONKEY":  "[parameters('appInsightsInstrumentationKey')]",
        "AddressConnectionString": "[format('AccountEndpoint={0}/;AccountKey={1};', parameters('cosmosDbEndpoint'), parameters('cosmosDbKey'))]",
        "CollectionId": "[parameters('cosmosDbCollectionId')]",
        "DatabaseId": "[parameters('cosmosDbDatabaseId')]",
        "CustomerDatabaseId": "customers",
        "CustomerCollectionId": "customers",
        "ServiceBusConnectionString": "[parameters('serviceBusConnectionString')]",
        "QueueName": "[parameters('serviceBusQueueName')]",
        "AzureCountrySet": "GB",
        "CustomerSearchIndexName": "customer-search-index-v2",
        "SearchServiceName": "[parameters('SearchServiceName')]",
        "SearchServiceAdminApiKey": "[parameters('SearchServiceAdminApiKey')]"
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2023-12-01",
      "name": "[format('{0}/{1}', parameters('functionAppName'), 'connectionstrings')]",
      "properties": {}
    }
  ],
  "outputs": {}
}